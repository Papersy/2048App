<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainConst"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gameBack"
    tools:context=".mainGameWindow.gameWindow">

    <LinearLayout
        android:id="@+id/mainLinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:background="@drawable/main_linear_style"
        android:orientation="horizontal"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:orientation="horizontal"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <GridLayout
            android:id="@+id/gridText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="4" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/swipeReader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <TextView
        android:id="@+id/textDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainLinear"
        tools:visibility="invisible" />

    <LinearLayout
        android:id="@+id/linearPosition"
        android:layout_width="44dp"
        android:layout_height="68dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/bonus_style"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearDouble">

        <LinearLayout
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/circle_background"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgPosition"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_two_way_arrows" />
        </LinearLayout>

        <TextView
            android:id="@+id/textPositionCount"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="N"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearDelete"
        android:layout_width="44dp"
        android:layout_height="68dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/bonus_style"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearDouble">

        <LinearLayout
            android:id="@+id/linearDelteCircle"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/delete_background"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgDelete"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="top"
                android:layout_marginEnd="50dp"
                app:srcCompat="@drawable/ic_quit" />
        </LinearLayout>

        <TextView
            android:id="@+id/textDelteCount"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="N"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearDouble"
        android:layout_width="44dp"
        android:layout_height="68dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/bonus_style"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/circle_background"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="x2"
                android:textColor="@android:color/white"
                android:textSize="25sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textDoubleCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="N"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearInfo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/colorAccent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/mainLinear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Score:"
                android:textSize="30sp"
                app:layout_constraintBottom_toTopOf="@+id/txtBestScore"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/goHome"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#A21818"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"></LinearLayout>

            <LinearLayout
                android:id="@+id/restartGame"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/prevArray"></LinearLayout>

            <LinearLayout
                android:id="@+id/prevArray"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#FDF70808"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"></LinearLayout>

            <TextView
                android:id="@+id/txtBestScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Best score:"
                app:layout_constraintBottom_toTopOf="@+id/prevArray"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>